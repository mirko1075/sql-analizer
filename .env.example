# Application Settings
ENV=development
LOG_LEVEL=INFO
DEBUG=false

# Internal PostgreSQL Database (for storing collected queries and analysis)
INTERNAL_DB_HOST=localhost
INTERNAL_DB_PORT=5440
INTERNAL_DB_USER=ai_core
INTERNAL_DB_PASSWORD=ai_core
INTERNAL_DB_NAME=ai_core

# Redis (for caching and task queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# MySQL Lab (target database for slow query collection)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3307
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DB=labdb

# PostgreSQL Lab (target database for slow query collection)
PG_HOST=127.0.0.1
PG_PORT=5433
PG_USER=postgres
PG_PASSWORD=root
PG_DB=labdb

# Collector Settings
COLLECTOR_INTERVAL=300  # Run collector every 5 minutes (seconds)

# Analyzer Settings
ANALYZER_INTERVAL=600   # Run analyzer every 10 minutes (seconds)

# AI Provider Settings (stub/openai/anthropic/etc)
AI_PROVIDER=stub
AI_API_KEY=your-api-key-here
AI_MODEL=gpt-4

# SQL Query Echo (set to true to log all SQL queries)
SQL_ECHO=false
