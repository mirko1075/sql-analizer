# DBPower AI Analyzer - Environment Configuration

# ====================
# Service Configuration
# ====================
ANALYZER_HOST=0.0.0.0
ANALYZER_PORT=8001
ANALYZER_WORKERS=2

# ====================
# AI Model Configuration
# ====================

# Provider: openai, ollama, anthropic
MODEL_PROVIDER=openai

# For OpenAI (Cloud)
MODEL_NAME=gpt-4
MODEL_API_KEY=sk-...your-openai-api-key...

# For Ollama (On-Premise)
# MODEL_PROVIDER=ollama
# MODEL_NAME=codellama:13b
# MODEL_API_BASE_URL=http://localhost:11434

# Model Parameters
MODEL_TEMPERATURE=0.7
MODEL_MAX_TOKENS=2000
MODEL_TIMEOUT=60

# ====================
# Analysis Settings
# ====================
MAX_QUERY_LENGTH=10000
ENABLE_CACHING=true
CACHE_TTL=3600

# ====================
# Security
# ====================
REQUIRE_AUTHENTICATION=true

# Comma-separated list of allowed API keys
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ANALYZER_API_KEYS=key1_xxxxxxxxxxxxxxxx,key2_yyyyyyyyyyyyyyyy

# ====================
# Logging
# ====================
LOG_LEVEL=INFO

# Privacy: Set to false to avoid logging SQL queries
LOG_QUERIES=false
