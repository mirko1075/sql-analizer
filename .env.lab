# AI Query Analyzer - Lab Environment Configuration
# =============================================================================
# This configuration connects to the MySQL Slow Query Lab Database
# =============================================================================

# Application Settings
ENV=development
LOG_LEVEL=INFO
DEBUG=false

# Internal Database (PostgreSQL) - for storing collected queries
INTERNAL_DB_HOST=localhost
INTERNAL_DB_PORT=5440
INTERNAL_DB_USER=ai_core
INTERNAL_DB_PASSWORD=ai_core
INTERNAL_DB_NAME=ai_core

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# MySQL Lab Database (Source for slow query collection)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3307
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DB=ecommerce_lab

# PostgreSQL Lab (not used for now, but configured)
PG_HOST=127.0.0.1
PG_PORT=5433
PG_USER=postgres
PG_PASSWORD=postgres
PG_DB=labdb

# Collector Settings
COLLECTOR_INTERVAL=300  # 5 minutes
ANALYZER_INTERVAL=600   # 10 minutes

# AI Provider
AI_PROVIDER=stub
# AI_API_KEY=your-api-key-here
AI_MODEL=gpt-4
